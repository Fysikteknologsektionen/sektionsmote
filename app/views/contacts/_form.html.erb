<%= simple_form_for(@contact) do |f| %>
  <%= f.input :name %>
  <%= f.input :text %>
  <%= f.input :email %>
  <%= f.input :public %>
  <%= f.button :submit, id: 'contact-submit' %>
  <% if !@contact.new_record? %>
    <%= link_to(t(:destroy_attr, attr: model_name(Contact)), contact_path(@contact),
                method: :delete,
                class: 'btn danger pull-right') %>
  <% end %>
<% end %>
