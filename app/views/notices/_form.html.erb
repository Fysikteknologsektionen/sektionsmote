<%= simple_form_for(@notice) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :public %>
  <%= f.input :d_publish, as: :datetime_picker %>
  <%= f.input :d_remove, as: :datetime_picker %>
  <%= f.input :sort %>
  <%= f.input :image %>
  <% if @notice.image? %>
    <%= image_tag(image_notice_path(@notice, style: 'small')) %><br>
  <% end %>
  <%= f.button :submit, id: 'submit-notice' %>
<% end %>
