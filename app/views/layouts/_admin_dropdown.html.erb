<li class="dropdown right">
  <%= link_to("#", class: "dropdown-toggle", data: { toggle: "dropdown", "close-others" => "false" }) do %>
    <%= fa_icon('cog') %>
    <span>
      <%= t(:administrate) %>
    </span>
  <% end %>
  <ul class="dropdown-menu">
    <% if can? :manage, :all  %>
      <li class="dropdown-submenu">
        <%= link_to(t(:admin), nil) %>
        <ul class="dropdown-menu">
          <li><%= link_to(models_name(User), admin_users_path) %></li>
          <li><%= link_to(models_name(Menu), menus_path) %></li>
          <li><%= link_to(models_name(Constant), constants_path) %></li>
          <li><%= link_to(models_name(Permission), admin_permission_users_path) %></li>
        </ul>
      </li>
    <% end %>
    <% if can? :modify, Contact %>
      <li class="dropdown-submenu">
        <%= link_to(model_name(Contact), nil) %>
        <ul class="dropdown-menu">
          <li><%= link_to(t(:index_attr, attr: models_name(Contact)), contacts_path) %></li>
          <li>
            <%= link_to(t(:new_attr, attr: model_name(Contact)), new_contact_path) %>
          </li>
        </ul>
      </li>
    <% end %>
    <% if can? :modify, News %>
      <li class="dropdown-submenu">
        <%= link_to(model_name(News), admin_news_index_path) %>
      </li>
    <% end %>

    <% if can? :manage, Notice %>
      <li class="dropdown-submenu">
        <%= link_to(t('notice.title'), notices_path)%>
        <ul class="dropdown-menu">
          <li><%= link_to(t('notice.title'), notices_path) %></li>
          <li><%= link_to(t('notice.new'), new_notice_path) %></li>
        </ul>
      </li>
    <% end %>
    <% if can? :manage, Document %>
      <li class="dropdown-submenu">
        <%= link_to(model_name(Document), admin_documents_path) %>
      </li>
    <% end %>
    <% if can? :manage, Vote %>
      <li class="dropdown-submenu">
        <%= link_to 'Voteringar', admin_votes_path %>
      </li>
    <% end %>
    <% if can? :manage, User %>
      <li class="dropdown-submenu">
        <%= link_to models_name(User), admin_users_path %>
      </li>
    <% end %>
  </ul>
</li>
