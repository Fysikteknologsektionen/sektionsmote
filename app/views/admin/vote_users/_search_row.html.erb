<% if vote_users.present? %>
  <%= vote_users.each do |user| %>
    <tr id="<%= dom_id(user) %>">
      <td><%= user.to_s %></td>
      <td class="votecode"><%= user.votecode %></td>
      <td><%= user.card_number %></td>
      <td class="adjust"><%= vote_user_state_link(user) %></td>
      <td class="votecode-reset">
        <%= link_to(t('vote_user.reset'), new_votecode_admin_vote_user_path(user),
                    method: :patch, remote: true,
                    data: {confirm: t('vote_user.confirm_reset')},
                    class: 'btn secondary small') %>
      </td>
    </tr>
  <% end %>
<% end %>
