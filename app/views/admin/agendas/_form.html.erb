<%= simple_form_for [:admin, agenda] do |f| %>
  <%= f.input :title %>
  <%= f.input :position, as: :integer, input_html: { min: '1'} %>
  <%= f.input :description, as: :pagedown,
                            input_html: { preview: true, rows: 8 },
                            hint: t('agenda.hint.description') %>
  <%= f.button :submit %>
  <% if agenda.persisted? %>
    <%= link_to t('agenda.destroy'), admin_agenda_path(agenda),
                                     method: :delete,
                                     class: 'btn danger pull-right' %>
  <% end %>
<% end %>
