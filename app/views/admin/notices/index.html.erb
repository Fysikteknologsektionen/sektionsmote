<% provide(:title, t('notice.title')) %>
<div class="headline notice">
  <h1><%= t('notice.index') %></h1>
</div>

<div class="col-md-2 col-sm-12">
  <%= link_to(t('notice.new'), new_admin_notice_path, class: 'btn primary') %>
  <hr>
  <button class="wg-external-submit-button btn secondary" data-grid-name="grid">
    <%= t('document.filter') %>
  </button>
  <button class="wg-external-reset-button btn secondary" data-grid-name="grid">
    <%= t('document.reset_filter') %>
  </button>
</div>

<div class="col-md-10 col-sm-12">
  <%= grid(@notice_grid, hide_submit_button: true,
           hide_reset_button: true) do |g|
    g.column(name: Notice.human_attribute_name(:title),
             attribute: 'title') do |notice|
      link_to(notice, edit_admin_notice_path(notice))
    end
    g.column(name: Notice.human_attribute_name(:public),
             attribute: 'public') do |notice|
      yes_no(notice.public)
    end
    g.column(name: Notice.human_attribute_name(:sort),
             attribute: 'sort')
  end -%>
</div>
